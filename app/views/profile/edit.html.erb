<%= content_for(:title, "Edit Profile") %>
<h1> Edit Profile </h1>
<%= render("layouts/errors", :object => @profile) %>

<%= form_for(@profile) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :street %>
    <%= f.text_field :street %>
  </div>
  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  <div class="form-group">
    <%= f.label :zip %>
    <%= f.text_field :zip %>
  </div>
  <div class="form-group">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <%= f.submit(:class => "btn btn-success") %>
<% end %><br>
<%= link_to "View Profile", profile_path(@profile), :class => "btn btn-default btn-sm"%>
