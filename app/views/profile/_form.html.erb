<div id="update_profile">
<h3> Edit Personal Information </h3>
<%= render("layouts/errors", :object => @profile) %>
<%= form_for(@profile, remote: true) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :street %>
    <%= f.text_field :street %>
  </div>
  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="form-group">
    <%= f.label :state %>
    <%= f.select(:state, options_for_select(us_states, @profile.state)) %>
  </div>
  <div class="form-group">
    <%= f.label :zip %>
    <%= f.text_field :zip %>
  </div>
  <div class="form-group">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <%= f.submit(:class => "btn btn-success") %>
<% end %><br>
<%= link_to "Cancel", :back %>
</div>